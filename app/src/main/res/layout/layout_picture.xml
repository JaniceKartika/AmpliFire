<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/dimens_16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/label_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="@string/add_pic_text" />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="@dimen/dimens_120dp"
        android:layout_height="@dimen/dimens_120dp"
        android:layout_below="@+id/label_pic"
        android:layout_marginTop="@dimen/dimens_8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_add_grey_24dp" />


    <ImageView
        android:id="@+id/picture_camera"
        android:layout_width="@dimen/item_height_220dp"
        android:layout_height="@dimen/item_height_220dp"
        android:layout_below="@+id/label_pic"
        android:visibility="gone"
        android:foreground="?android:attr/selectableItemBackground" />
</RelativeLayout>