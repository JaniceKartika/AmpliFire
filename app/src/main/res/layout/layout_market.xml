<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimens_4dp"
    android:orientation="vertical"
    android:padding="@dimen/dimens_8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_market" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_market"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_8dp"
            android:layout_marginRight="@dimen/dimens_8dp"
            android:layout_marginTop="@dimen/dimens_8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_8dp"
            android:layout_marginRight="@dimen/dimens_8dp"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:text="@string/validation_code" />

        <EditText
            android:id="@+id/edittext_validation_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_8dp"
            android:layout_marginRight="@dimen/dimens_8dp"
            android:maxLines="1" />

    </LinearLayout>

</LinearLayout>