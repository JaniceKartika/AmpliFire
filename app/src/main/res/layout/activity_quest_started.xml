<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_quest_started"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_quest_started"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <include
                android:id="@+id/map_quest_started"
                layout="@layout/maps" />
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_quest_started"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/dimens_8dp"
            android:paddingTop="@dimen/dimens_8dp"
            android:scrollbars="vertical" />
    </LinearLayout>
</RelativeLayout>
