<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">#444</item>
        <item name="android:textColorSecondaryInverse">#777</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#444</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">@dimen/dimens_16dp</item>
        <item name="android:paddingRight">@dimen/dimens_16dp</item>
        <item name="android:paddingTop">@dimen/dimens_8dp</item>
        <item name="android:paddingBottom">@dimen/dimens_8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="MyButton.Green">
        <item name="android:background">@drawable/selector_button_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyButton.Red">
        <item name="android:background">@drawable/selector_button_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyButton.White">
        <item name="android:background">@drawable/selector_button_white</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="MyButton.Blue">
        <item name="android:background">@drawable/selector_button_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="MyEditTextBox">
        <item name="android:paddingTop">@dimen/dimens_8dp</item>
        <item name="android:paddingBottom">@dimen/dimens_8dp</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:paddingLeft">@dimen/dimens_16dp</item>
        <item name="android:paddingRight">@dimen/dimens_16dp</item>
        <item name="android:background">@drawable/selector_bg_edittext</item>
    </style>


</resources>
